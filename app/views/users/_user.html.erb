<li>
	<%= gravatar_for user, :size => 30 %>
	<%= link_to user.name, user %>
	<% if current_user.admin? %>
		|
		<%= link_to "Edit", edit_user_path(user) %>
	    | 
		<%= link_to "Delete", user, :method => :delete, :confirm => "Are you sure you want to delete this account?", :title => "Delete #{user.name}" %>
	<% end %>
</li>